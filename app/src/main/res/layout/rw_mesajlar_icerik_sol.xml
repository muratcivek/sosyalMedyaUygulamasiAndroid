<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:elevation="3dp"
    app:contentPadding="5dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#819581"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="email"
            android:textStyle="bold"
            android:textColor="#CBDACC"
android:id="@+id/mesajlarMail"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/mesajlarDetay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kullanıcı kendi mesajını gönderdiğinde bu şekilde gözükecek."
            android:textAlignment="viewStart"

            android:textColor="#F6F8F5"
            android:textSize="19sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>