<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#3D5E3D"
    >


    <Button
        android:id="@+id/kayit_ol_foto_ekle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/girisyap_buton_sekil"
        android:backgroundTint="#8F8E8E"
        android:drawableRight="@drawable/kayit_ol_foto_ekle"
        android:fontFamily="sans-serif"
        android:hint="Fotoğraf Ekle"
        android:onClick="btnsecFoto"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etKayitKullaniciAdi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.779" />

    <Button

        android:id="@+id/btnKayitOl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/girisyap_buton_sekil"
        android:backgroundTint="#8F8E8E"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:hint="Kayıt Ol"
        android:onClick="btnKayitTikla"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etKayitSifre"
        app:layout_constraintVertical_bias="0.251" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilFoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"

        android:src="#FF719171"
        app:civ_border_color="#FF000000"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toTopOf="@+id/kayit_ol_foto_ekle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.591" />

    <EditText
        android:id="@+id/etKayitMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/girisyap_buton_sekil"
        android:drawableLeft="@drawable/kullanici_adi_girisi"
        android:drawablePadding="15dp"
        android:hint="Mail"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/etKayitSifre"

        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/etKayitSifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="364dp"
        android:background="@drawable/girisyap_buton_sekil"
        android:drawableLeft="@drawable/sifre_bilgi_foto"
        android:drawablePadding="15dp"
        android:hint="Şifre"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etKayitKullaniciAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/girisyap_buton_sekil"
        android:drawableLeft="@drawable/kullanici_adi_girisi"
        android:drawablePadding="15dp"
        android:hint="Kullanıcı Adı"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/etKayitMail"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>